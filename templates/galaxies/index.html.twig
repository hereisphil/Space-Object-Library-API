{% extends "layouts/_default.html.twig" %}

{% block main %}
    <h1 style="margin-bottom: 1.5rem;">All Galaxies</h1>

    <table style="
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 6px;
        overflow: hidden;
        margin-bottom: 2rem;
    ">
        <thead style="background: #1e293b; color: white;">
            <tr>
                <th style="padding: 0.75rem; text-align: left;">ID</th>
                <th style="padding: 0.75rem; text-align: left;">Name</th>
                <th style="padding: 0.75rem; text-align: left;">Size</th>
                <th style="padding: 0.75rem; text-align: left;">Description</th>
                <th style="padding: 0.75rem; text-align: left;">Created At</th>
                <th style="padding: 0.75rem; text-align: left;">Updated At</th>
                <th style="padding: 0.75rem; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for galaxy in galaxies %}
            <tr style="border-bottom: 1px solid #e5e7eb;">
                <td style="padding: 0.75rem;">{{ galaxy.id }}</td>
                <td style="padding: 0.75rem; font-weight: bold;">{{ galaxy.name }}</td>
                <td style="padding: 0.75rem;">{{ galaxy.size }}</td>
                <td style="padding: 0.75rem;">{{ galaxy.description }}</td>
                <td style="padding: 0.75rem;">{{ galaxy.createdAt|date("Y/m/d") }}</td>
                <td style="padding: 0.75rem;">{{ galaxy.updatedAt|date("Y/m/d") }}</td>
                <td class="actions" style="padding: 0.75rem; text-align: center;">
                    <a href="/galaxies/{{ galaxy.id }}" class="view">
                        <?xml version="1.0" encoding="utf-8"?>
                        <!-- License: MIT. Made by Kenan Gundogan: https://github.com/kenangundogan/fontisto -->
                        <svg fill="currentColor" width="24px" height="24px" viewBox="0 -4 32 32" xmlns="http://www.w3.org/2000/svg"><path d="m16 0c-8.836 0-16 11.844-16 11.844s7.164 12.156 16 12.156 16-12.156 16-12.156-7.164-11.844-16-11.844zm0 20c-4.418 0-8-3.582-8-8s3.582-8 8-8 8 3.582 8 8c0 4.418-3.582 8-8 8z"/><path d="m20 12.016c0 2.209-1.791 4-4 4s-4-1.791-4-4 1.791-4 4-4 4 1.791 4 4z"/></svg>
                    </a>
                    <a href="/galaxies/{{ galaxy.id }}/edit" class="edit">
                        <?xml version="1.0" encoding="utf-8"?>
                        <!-- License: PD. Made by stephenhutchings: https://github.com/stephenhutchings/typicons.font -->
                        <svg fill="currentColor" width="24px" height="24px" viewBox="0 0 24 24" version="1.2" baseProfile="tiny" xmlns="http://www.w3.org/2000/svg"><path d="M21.561 5.318l-2.879-2.879c-.293-.293-.677-.439-1.061-.439-.385 0-.768.146-1.061.439l-3.56 3.561h-9c-.552 0-1 .447-1 1v13c0 .553.448 1 1 1h13c.552 0 1-.447 1-1v-9l3.561-3.561c.293-.293.439-.677.439-1.061s-.146-.767-.439-1.06zm-10.061 9.354l-2.172-2.172 6.293-6.293 2.172 2.172-6.293 6.293zm-2.561-1.339l1.756 1.728-1.695-.061-.061-1.667zm7.061 5.667h-11v-11h6l-3.18 3.18c-.293.293-.478.812-.629 1.289-.16.5-.191 1.056-.191 1.47v3.061h3.061c.414 0 1.108-.1 1.571-.29.464-.19.896-.347 1.188-.64l3.18-3.07v6zm2.5-11.328l-2.172-2.172 1.293-1.293 2.171 2.172-1.292 1.293z"/></svg>
                    </a>
                    <a href="/galaxies/{{ galaxy.id }}/delete" class="delete">
                        <!-- License: CC Attribution. Made by remartwork: https://dribbble.com/remartwork -->
                        <svg width="24px" height="24px" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.12817 8.15391C5.12817 10.4103 5.12817 13.5898 5.12817 15.1283C5.23074 16.4616 5.3333 18.2052 5.43587 19.436C5.53843 20.8719 6.7692 22.0001 8.2051 22.0001H15.7948C17.2307 22.0001 18.4615 20.8719 18.5641 19.436C18.6666 18.2052 18.7692 16.4616 18.8718 15.1283C18.9743 13.5898 18.8718 10.4103 18.8718 8.15391H5.12817Z" fill="currentColor"/>
                            <path d="M19.1795 5.07698H16.6154L15.7949 3.53852C15.2821 2.61545 14.359 2.00006 13.3333 2.00006H10.8718C9.84615 2.00006 8.82051 2.61545 8.41026 3.53852L7.38462 5.07698H4.82051C4.41026 5.07698 4 5.48724 4 5.8975C4 6.30775 4.41026 6.71801 4.82051 6.71801H19.1795C19.5897 6.71801 20 6.41032 20 5.8975C20 5.38468 19.5897 5.07698 19.1795 5.07698ZM9.12821 5.07698L9.64103 4.25647C9.84615 3.84621 10.2564 3.53852 10.7692 3.53852H13.2308C13.7436 3.53852 14.1538 3.74365 14.359 4.25647L14.8718 5.07698H9.12821Z" fill="currentColor"/>
                        </svg>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a 
        href="/galaxies/new"
        style="
            padding: 0.4rem 0.6rem;
            border-radius: 0.25rem;
            background-color: #4b6692;
            color: white;
            margin-left: 1rem;
        "
    >
        Create New Galaxy
    </a> 
{% endblock %}